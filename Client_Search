import java.awt.Color;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

import javax.swing.BorderFactory;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;

public class Client_Search implements ActionListener, KeyListener {

	public static String namePlate;
	
JFrame ClientSearchPage = new JFrame("LIBSYS");
	
	JLabel PageHeader = new JLabel();
	JLabel LineLabel = new JLabel();
	JLabel LIBSYSLabel = new JLabel();
	JLabel profilePlaceholder = new JLabel();
	JLabel username = new JLabel();
	JLabel OrLabel1 = new JLabel();
	JLabel OrLabel2 = new JLabel();
	JLabel FirstNameLabel = new JLabel();
	JLabel LastNameLabel = new JLabel();
	JLabel EmailLabel = new JLabel();
	JLabel PhoneNumberLabel = new JLabel();
	
	JTextField SearchFirstNameField = new JTextField();
	JTextField SearchLastNameField = new JTextField();
	JTextField SearchEmailField = new JTextField();
	JTextField SearchPhoneNumberField = new JTextField();

	
	JButton signoutButton = new JButton("Sign Out");
	JButton SearchButton = new JButton("Search Client");
	JButton BackButton = new JButton("Back");
	
	Client_Search(String userID) {
		
		namePlate = userID;
		
		// +-------------------- Labels --------------------+
				LIBSYSLabel.setBounds(500, 0, 700, 100);
				LIBSYSLabel.setText("LIBSYS System");
				LIBSYSLabel.setFont(new Font(null, Font.BOLD, 35));
				
				LineLabel.setBounds(0, 70, 1280, 3);
				LineLabel.setOpaque(true);
				LineLabel.setBackground(Color.blue);
				
				PageHeader.setBounds(15, 50, 250, 100);
				PageHeader.setText("Client Search");
				PageHeader.setFont(new Font(null, Font.PLAIN, 25));
				
				profilePlaceholder.setBounds(1185, 85, 50, 50);
				profilePlaceholder.setOpaque(true);
				profilePlaceholder.setBackground(Color.LIGHT_GRAY);
				
				username.setBounds(1185, 100, 100, 100);
				username.setText(userID);
				
				FirstNameLabel.setBounds(375, 250, 100, 25);
				FirstNameLabel.setText("First Name:");
				FirstNameLabel.setFont(new Font(null, Font.PLAIN, 15));
				
				LastNameLabel.setBounds(375, 300, 100, 25);
				LastNameLabel.setText("Last Name:");
				LastNameLabel.setFont(new Font(null, Font.PLAIN, 15));
				
				EmailLabel.setBounds(408, 370, 100, 25);
				EmailLabel.setText("Email:");
				EmailLabel.setFont(new Font(null, Font.PLAIN, 15));
				
				PhoneNumberLabel.setBounds(350, 430, 150, 25);
				PhoneNumberLabel.setText("Phone Number:");
				PhoneNumberLabel.setFont(new Font(null, Font.PLAIN, 15));
				
				OrLabel1.setBounds(475, 335, 25, 25);
				OrLabel1.setText("Or");
				OrLabel1.setFont(new Font(null, Font.PLAIN, 15));
				
				OrLabel2.setBounds(475, 400, 25, 25);
				OrLabel2.setText("Or");
				OrLabel2.setFont(new Font(null, Font.PLAIN, 15));
				
				// +-------------------- Search Fields --------------------+
				SearchFirstNameField.setBounds(475, 250, 250, 25);
				SearchLastNameField.setBounds(475, 300, 250, 25);
				SearchEmailField.setBounds(475, 370, 250, 25);
				SearchPhoneNumberField.setBounds(475, 430, 250, 25);
				
				// +-------------------- Buttons --------------------+
				signoutButton.setBounds(1160, 160, 100, 25);
				signoutButton.addActionListener(this);
				signoutButton.setFocusable(false);
				signoutButton.setFont(new Font(null, Font.PLAIN, 10));
				signoutButton.setForeground(Color.BLUE);
				signoutButton.setBorder(BorderFactory.createEmptyBorder());
				signoutButton.setContentAreaFilled(false);
				
				SearchButton.setBounds(750, 250, 175, 25);
				SearchButton.addActionListener(this);
				SearchButton.setFocusable(false);
				
				BackButton.setBounds(750, 300, 100, 25);
				BackButton.addActionListener(this);
				BackButton.setFocusable(false);
				
				// +-------------------- Frame --------------------+
				
				ClientSearchPage.setSize(1280, 720);
				
				ClientSearchPage.add(PageHeader);
				ClientSearchPage.add(LineLabel);
				ClientSearchPage.add(LIBSYSLabel);
				ClientSearchPage.add(profilePlaceholder);
				ClientSearchPage.add(BackButton);
				ClientSearchPage.add(SearchButton);
				ClientSearchPage.add(signoutButton);
				ClientSearchPage.add(username);
				ClientSearchPage.add(SearchFirstNameField);
				ClientSearchPage.add(SearchLastNameField);
				ClientSearchPage.add(SearchEmailField);
				ClientSearchPage.add(SearchPhoneNumberField);
				ClientSearchPage.add(OrLabel1);
				ClientSearchPage.add(OrLabel2);
				ClientSearchPage.add(FirstNameLabel);
				ClientSearchPage.add(LastNameLabel);
				ClientSearchPage.add(EmailLabel);
				ClientSearchPage.add(PhoneNumberLabel);
				
				ClientSearchPage.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
				ClientSearchPage.setLayout(null);
				ClientSearchPage.setVisible(true);
				ClientSearchPage.getRootPane().setDefaultButton(SearchButton);
		
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		
		if (e.getSource() == signoutButton) {
			ClientSearchPage.dispose();
			new Selection_Page();
			
		}
		
		if (e.getSource() == BackButton) {
			ClientSearchPage.dispose();
			new Main_Menu(namePlate);
			
		}
		
	}

	@Override
	public void keyTyped(KeyEvent e) {
		if (e.getKeyCode() == KeyEvent.VK_ENTER) {
			SearchButton.doClick();
		}
		
	}

	@Override
	public void keyPressed(KeyEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void keyReleased(KeyEvent e) {
		// TODO Auto-generated method stub
		
	}
	
}
